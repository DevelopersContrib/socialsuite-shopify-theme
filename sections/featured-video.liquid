<div class="container vid-section">
  <div class="section-header text-center">
    <h2>{{ section.settings.header }}</h2>
  </div>
  <div class="text-center">
    <iframe width="560" height="315" src="{{ section.settings.video_url }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
  </div>
</div>
{% schema %}
  {
    "name": "Featured video",
    "settings": [
		{
			"type": "text",
			"id": "header",
			"label": "Header",
			"default": "Promotional video"
		},
		{
			"type": "text",
			"id": "video_url",
			"label": "Video Url",
			"default": "https://www.youtube.com/embed/Da4IIMaGLqA"
		}
	],
	"presets": [
		{
          	"name": "Featured video",
          	"category": "Promotional"
      	}
	]
  }
{% endschema %}

{% stylesheet %}
.vid-section {
	padding: 60px 0px !important;
}
{% endstylesheet %}

